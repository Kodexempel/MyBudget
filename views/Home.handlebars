{{!--    
     {{>footer}} --}}
   <script>
        const openUserModalButton = document.getElementById('open-user-modal');
        const userModal = document.getElementById('user-modal');
        const closeUserModalButton = document.getElementById('close-user-modal');
        let isUserModalOpen = false;

        openUserModalButton.addEventListener('click', () => {
            if (!isUserModalOpen) {
                userModal.style.display = 'block';
                isUserModalOpen = true;
            } else {
                userModal.style.display = 'none';
                isUserModalOpen = false;
            }
        });

        closeUserModalButton.addEventListener('click', () => {
            userModal.style.display = 'none';
            isUserModalOpen = false;
        });
    </script>
</body>
</html>