        {{!-- <a href="/changePassword">Change Password</a> --}}
        {{!-- <a href ="/Deleteaccount">Delete your account</a> --}}
         
    </div>
    <div class="profile-container" style="margin-bottom: 22%;">
        {{!-- <img id="open-user-modal" src="/img/user profile.png" alt="Your Profile Picture"> --}}
        <div class="modal" id="user-modal">
            <div class="modal-content">
                {{#if user}}
                    <h1>User: {{user.userName}}!</h1>
                    <p>Your email: {{user.email}}</p>
                    {{!-- <a href="logout">
                        <span class="logout-link">
                            <img src="/img/icons8-logout-50.png" alt="Logout">
