 <div class="modal" id="addBudgetModal">
        <div class="modal-content">
            <span class="close" id="close-add-budget">&times;</span>
            <h2>Add Budget</h2>
            <form class="form-element" action="/AddBudget" method="POST">
                <label for="budgetName">Budget Name</label>
                <input type="text" id="budgetName" name="budgetName" required>
                <br>
                <label for="amount">Amount:</label>
                <input type="number" id="amount" name="amount" required>
                <br>
                <button type="submit">Add Budget</button>
            </form>
        </div>
    </div>

    <script>
        // JavaScript to handle modal visibility
        const loginModal = document.getElementById('loginModal');
        const signupModal = document.getElementById('signupModal');
        const addBudgetModal = document.getElementById('addBudgetModal');

        // Function to show modals
        function showModal(modal) {
            modal.style.display = 'block';
        }

        // Function to close modals
        function closeModal(modal) {
            modal.style.display = 'none';
        }

        // Event listeners to show modals
        document.querySelector("#show-login").addEventListener("click", function () {
            showModal(loginModal);
        });

        document.querySelector("#show-signup").addEventListener("click", function () {
            showModal(signupModal);
        });

        document.querySelector("#show-add-budget").addEventListener("click", function () {
            showModal(addBudgetModal);
        });

        // Event listeners to close modals
        document.querySelector("#close-login").addEventListener("click", function () {
            closeModal(loginModal);
        });

        document.querySelector("#close-signup").addEventListener("click", function () {
            closeModal(signupModal);
        });

        document.querySelector("#close-add-budget").addEventListener("click", function () {
            closeModal(addBudgetModal);
        });

        // Close modals when clicking outside
        window.addEventListener('click', function (event) {
            if (event.target === loginModal) {
                closeModal(loginModal);
            }
            if (event.target === signupModal) {
                closeModal(signupModal);
            }
            if (event.target === addBudgetModal) {
                closeModal(addBudgetModal);
            }
        });
    </script>